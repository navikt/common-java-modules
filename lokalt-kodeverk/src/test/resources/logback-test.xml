<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="Stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5p - %-26.26c{1} - %m%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="Stdout" />
    </root>
</configuration>
