<?xml version="1.0" encoding="UTF-8"?>
<included scan="true" scanPeriod="30 seconds">
    <property name="THIS_LIBRARY" value="abac"/>

    <property name="loggingPattern"
              value="%d [%-5level] [%thread] %logger{5} %replace(- [%X{consumerId}, %X{callId}] ){'- \[, , \] ',''}- %m%n"/>

    <appender name="tjenestekall-abac" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SERVICE_CALLS_HOME}/${THIS_LIBRARY}-tjenestekall.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${SERVICE_CALLS_HOME}/${THIS_LIBRARY}-tjenestekall.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{ISO8601} ${applicationName} %level %mdc %m%n%rEx</pattern>
        </encoder>
    </appender>

    <logger name="AuditLogger" level="${ABAC_TJENESTEKALL_LOG_LEVEL:-INFO}" additivity="false">
        <appender-ref ref="tjenestekall-abac"/>
    </logger>
</included>