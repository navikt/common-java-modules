<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
	
	<parent>
        <groupId>no.nav.fo</groupId>
		<artifactId>pact-fo-pom</artifactId>
		<version>1.0.0</version>
    </parent>

    <artifactId>pact-consumers</artifactId>
    <version>1.0.0</version>

    <dependencies>

        <dependency>
            <groupId>no.nav.fo</groupId>
            <artifactId>pact-api</artifactId>
            <version>1.0.0</version>
        </dependency>

        <!-- Pact -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.2.4</version>
        </dependency>

        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20140107</version>
        </dependency>

        <dependency>
            <groupId>au.com.dius</groupId>
            <artifactId>pact-jvm-consumer-java8_2.12</artifactId>
            <version>3.5.12</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>au.com.dius</groupId>
            <artifactId>pact-jvm-consumer-junit_2.12</artifactId>
            <version>3.5.12</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>no.nav.sbl.dialogarena</groupId>
            <artifactId>common-test</artifactId>
            <version>2017.12.05.13.53</version>
            <scope>compile</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.warmuuh</groupId>
                <artifactId>pactbroker-maven-plugin</artifactId>
                <version>0.0.11</version>
                <executions>
                    <execution>
                        <id>upload-pacts</id>
                        <phase>verify</phase>
                        <goals><goal>upload-pacts</goal></goals>
                        <configuration>
                            <pacts>${project.build.directory}/pacts</pacts>
                            <brokerUrl>https://pact-broker.nais.preprod.local</brokerUrl>
                            <username>${env.PACT_USERNAME}</username>
                            <password>${env.PACT_PASSWORD}</password>
                            <mergePacts>true</mergePacts>
                            <consumerVersion>0.0.6</consumerVersion>
                            <tagName>latest</tagName>
                            <insecure>true</insecure>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>



</project>