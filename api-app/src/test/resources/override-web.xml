<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>springKontekstKlasse</param-name>
        <param-value>no.nav.fo.apiapp.ApplicationConfig</param-value>
    </context-param>

    <listener>
        <listener-class>no.nav.apiapp.ApiAppServletContextListener</listener-class>
    </listener>

    <!-- kun for testingen sin del, se SessionCookieTest -->
    <context-param>
        <param-name>maksSesjonsLengde</param-name>
        <param-value>5</param-value>
    </context-param>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Beskyttet</web-resource-name>
            <url-pattern>/api/openam</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <!-- From Servlet spec 3.1 "**" means any authenticated user
            ref: https://community.oracle.com/blogs/swchan2/2013/04/19/role-servlet-31-security-constraint -->
            <role-name>**</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
